<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        android:minSdkVersion="33" />

    <application
        android:name=".AideoApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_aideo_app_foreground"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_aideo_app_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.Aideo"
        android:usesCleartextTraffic="true">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="${ADMOB_APP_ID}" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Aideo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <data android:scheme="https" android:host="aideo_app" />
            </intent-filter>
        </activity>

        <service android:name=".update.InAppUpdateService" />
    </application>

</manifest>